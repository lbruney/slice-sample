// SWATCH
light-grey = #eee
dark-grey = #333

*
  margin 0
  padding 0
  font-family Helvetica Neue, Helvetica, Arial
  color dark-grey

h1
  font-size 30px

.container
  width 50%
  margin auto
  margin-top 30px
  border-radius 5px
  background-color light-grey
  padding 15px

p
 padding 10px 0
 text-align justify

ul
  border-radius 5px
  li
    background-color dark-grey
    a
      text-decoration none
      color white
    list-style none
    padding 10px
    &:nth-child(2n)
      background-color white
      a
        color dark-grey